@using PagedList.Mvc;
@model MvcBookStore.Models.CHITIETDONTHANG
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    tr, td, th {
        text-align: center;
        font-weight: bold;
        border: 1px solid black;
    }

    table {
        border: 1px solid black;
    }

    #imggh {
        width: 100px;
        height: 150px;
    }

    a {
        font-weight: bold;
    }
    .Trang li {
        display: inline;
        letter-spacing: 20px;
    }

    .Trang a:active {
        background-color: green;
        text-decoration-color: green;
    }
    #more {
        border: 0px solid black;
        width: 300px;
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        display: -webkit-box;
    }
<h3>Thông tin đơn hàng</h3>
<table>
    <tr>
        <th>Tên Sách</th>
        <th>Số Lượng</th>
        <th>Giá Bán</th>
        <th>Ảnh Bìa</th>
    </tr>
        <tr>
            <td>
                @Html.DisplayFor(model=>model.SACH.Tensach)
            </td>
            <td>
                @Html.DisplayFor(model => model.Soluong)
            </td>
            <td>
                @Html.DisplayFor(model => model.SACH.Giaban)
            </td>
            <td>
                <img id="imggh" src="@Url.Content("~/images/anhsp/"+Model.SACH.Anhbia)" alt="Ảnh không tồn tại!" />
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Quay lại", "DonHang")
</p>
